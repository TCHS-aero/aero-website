---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout title="News | TCHS Aero" description="News">
    <PageHeader 
    title="Latest Events" 
    subtitle="Keep up with our ventures!"
    backgroundImage="/uploads/news/3news.png"
  />

  <section class="not-prose mt-16">
    <div class="mx-auto max-w-6xl px-6">
      <div class="grid gap-12 md:grid-cols-[220px_1fr]">
        {/* LEFT COLUMN */}
        <div>
          <p class="text-sm font-extrabold tracking-widest text-gray-900">
            La Rosa S.T.E.M. Night
          </p>
        </div>

        {/* RIGHT COLUMN */}
        <div class="py-16 bg-gray-50 pb-20">
          <div>
            <h2 class="font-sans text-3xl font-extrabold tracking-tight text-gray-900">
              Hey! Did you catch us at S.T.E.M. Night?
            </h2>
            <p class="font-sans mt-4 max-w-2xl text-lg leading-8 text-gray-800">
              Thank you to all the parents and kids who showed interest in TCHS Aero, we had a lot of fun doing our live drone demo!
            </p>
        </div>

        <!-- NEWS photos  -->
        <article class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
          
          <img
            src="/uploads/news/news 1.png"
            alt="Team meeting"
            class="w-full h-64 object-cover rounded-xl"
          />

          <!-- <img
            src="/uploads/news/news 2.png"
            alt="Team meeting"
            class="w-full h-64 object-cover rounded-xl"
          /> -->

          <img
            src="/uploads/news/news 3.png"
            alt="Team meeting"
            class="w-full h-64 object-cover rounded-xl"
          />

        </article>

    </div>
  <!-- <h2 class="mt-8 text-2xl font-bold">Coming Soon</h2> -->
</BaseLayout>
