---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Welcome to TCHS Aero",
  subtitle = "",
  backgroundImage = "",
  
  
  secondaryCtaText = "",
  secondaryCtaLink = "",
  variant = "banner",
} = Astro.props;

const heroHeight =
  variant === "home"
    ? "min-h-screen"
    : "h-[45vh] md:h-[55vh]";
---

<!-- Hero section full screen -->
 
<section

  class="relative min-h-[70vh] flexrelative min-h-screen bg-cover bg-center flex items-center items-center bg-cover pt-30"
  style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(${backgroundImage}); background-position: center 20%;`}
>

  <div class="container">
    <div class="max-w-3xl text-white">
      <h1 class="font-sans text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
      <p class="font-sans text-xl md:text-2xl mb-8">{subtitle}</p>
      
      <div class="flex flex-wrap gap-4">
        
        
        <Button href={secondaryCtaLink} variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
          {secondaryCtaText}
        </Button>
      </div>
    </div>
  </div>
</section>